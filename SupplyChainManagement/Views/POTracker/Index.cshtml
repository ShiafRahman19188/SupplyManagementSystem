@model List<FileModelcs>

<h2>File List</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>File Size (KB)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@(file.FileSize / 1024) KB</td>
                <td>
                    <a asp-action="DownloadFile" asp-route-fileName="@file.FileName" class="btn btn-primary">Download</a>
                </td>
            </tr>
        }
    </tbody>
</table>