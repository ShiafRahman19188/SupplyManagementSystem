<h6>Details Info </h6>
<div class="row" style="font-size: small;">
	<table id="itemTable" class="table table-striped">
		<thead class="thead-dark">
			<tr>

				<th class="text-center">Booking No</th>
				<th class="text-center">Item Master Code</th>
				<th class="text-center">Shade</th>
				<th class="text-center">Unit</th>
				<th class="text-center">PO Qty</th>
				<th class="text-center">Rate</th>
				<th class="text-center">Value</th>
				<th class="text-center">Remarks</th>


			</tr>
		</thead>
		<tbody>
					@for (int i = 0; i < Model.ItemDetails.Count; i++)
					{
						<tr>
							<td class="text-center"><input type="text" name="ItemDetails[@i].BookingNo" value="@Model.ItemDetails[i].BookingNo" class="form-control" /></td>
							<td class="text-center"><input type="text" name="ItemDetails[@i].ItemMasterID" value="@Model.ItemDetails[i].ItemMasterID" class="form-control" /></td>
							<td class="text-center"><input type="text" name="ItemDetails[@i].YarnShade" value="@Model.ItemDetails[i].YarnShade" class="form-control" /></td>
							<td class="text-center"><input type="text" name="ItemDetails[@i].UnitName" value="@Model.ItemDetails[i].UnitName" class="form-control" /></td>
							<td class="text-center"><input type="number" name="ItemDetails[@i].PoQty" value="@Model.ItemDetails[i].PoQty" class="form-control" /></td>
							<td class="text-center"><input type="number" name="ItemDetails[@i].Rate" value="@Model.ItemDetails[i].Rate" class="form-control" /></td>
							<td class="text-center"><input type="number" name="ItemDetails[@i].PIValue" value="@Model.ItemDetails[i].PIValue" class="form-control" /></td>
							<td class="text-center"><input type="text" name="ItemDetails[@i].Remarks" value="@Model.ItemDetails[i].Remarks" class="form-control" /></td>
						</tr>
					}
				
		</tbody>
	</table>

</div>

